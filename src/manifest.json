{
    "manifest_version": 2,
    "name": "ChatGPT Explainer",
    "version": "1.0",
    "description": "Get a description of selected text using OpenAI's GPT-3.",
    "icons": {
      "48": "icons/chatgpt-48.png",
      "96": "icons/chatgpt-96.png"
    },
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": {
        "48": "icons/chatgpt-48.png",
        "96": "icons/chatgpt-96.png"
      },
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      "popup.html"
    ]
  }
  